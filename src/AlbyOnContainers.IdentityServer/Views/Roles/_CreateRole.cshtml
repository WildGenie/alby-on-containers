@model RoleViewModel

<div>
    <form asp-controller="Roles" asp-action="UpdateRoles" method="post">
        <ul>
            @foreach (var role in Model.Roles)
            {
                <li>
                    <input type="radio" asp-for="Name" value="@role" />
                    @role
                </li>
            }
        </ul>
        <label>Create new Role</label>
        <input asp-for="Name"/>
        <input type="submit" value="Create new Role"/>
        <input type="hidden" asp-for="Delete" value="false" id="delete"/>
        <input type="submit" value="Delete Role from List" onclick="document.getElementById('delete').value = 'true'"/>
    </form>
</div>