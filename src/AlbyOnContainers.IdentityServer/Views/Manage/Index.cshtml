@using IdentityServer.Views.Manage

@model IdentityServer.Models.ManageViewModel.ProfileViewModel

@{
    ViewBag.Title = "Profilo";
    Layout = "_ManageLayout";
    
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    
    <div class="text-left">
        <h3>@ViewData["Title"]</h3>
    </div>
    
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <div class="row">
        <div class="col-md-9">
            <form id="profile-form" method="post">
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                </div>
                
                <div class="form-group">
                   <label asp-for="PhoneNumber"></label>
                        
                   <div class="input-group">
                      <input asp-for="PhoneNumber" class="form-control" />
                      @if (Model.IsPhoneNumberConfirmed)
                      {
                          <div class="input-group-append" data-toggle="tooltip" data-placement="left" title="Verificato"><span class="input-group-text text-success font-weight-bold">✓</span></div>
                      }
                      else 
                      {
                          <div class="input-group-append" data-toggle="tooltip" data-placement="left" title="Non Verificato"><span class="input-group-text text-danger font-weight-bold">X</span></div>                                 
                      }
                   </div>

                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            
                <button id="update-profile-button" type="submit" class="btn btn-outline-primary w-25">Salva</button>
           
            </form>
        </div>
    </div>
    
</div>

