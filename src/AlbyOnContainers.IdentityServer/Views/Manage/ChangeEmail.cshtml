@model IdentityServer.Models.ManageViewModel.ChangeEmailViewModel

@{
    ViewBag.Title = "Cambia Email";
    Layout = "_ManageLayout";
}

<div class="container">

    <div class="text-left">
        <h3>@ViewData["Title"]</h3>
    </div>

    <partial name="_StatusMessage" for="StatusMessage"/>

    <div class="row">
        <div class="col-md-9">

            <form id="email-form" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled/>
                        <div class="input-group-append">
                            @if (Model.IsEmailConfirmed)
                            {
                                <div class="input-group-append" data-toggle="tooltip" data-placement="left" title="Verificato">
                                    <span class="input-group-text text-success font-weight-bold">✓</span>
                                </div>
                            }
                            else
                            {
                                <div class="input-group-append" data-toggle="tooltip" data-placement="left" title="Non Verificato">
                                    <span class="input-group-text text-danger font-weight-bold">X</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="NewEmail"></label>
                    <input asp-for="NewEmail" class="form-control"/>
                    <span asp-validation-for="NewEmail" class="text-danger"></span>
                </div>
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-outline-primary w-25">Cambia</button>
            </form>
        </div>
    </div>

</div>