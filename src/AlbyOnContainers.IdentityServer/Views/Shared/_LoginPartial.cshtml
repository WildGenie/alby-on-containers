@using IdentityServer4.Extensions

<ul class="navbar-nav lead">
    @if (User.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Manager" asp-controller="Profile" asp-action="Index"><strong>@User.Identity?.Name</strong></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Register">Registrati</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>